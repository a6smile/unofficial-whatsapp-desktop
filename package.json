{
  "name": "unofficial-whatsapp-desktop",
  "version": "1.0.0",
  "description": "Simple desktop client for WhatsApp (Unofficial)",
  "main": "main.js",
  "electron": "2.0.2",
  "electron-packager": "12.1.0",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "package-mac": "electron-packager . unofficial-whatsapp-desktop --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/whatsapp.icns --prune=true --out=dist --electron-version=2.0.2",
    "package-win": "electron-packager . unofficial-whatsapp-desktop --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/whatsapp.ico --prune=true --out=dist --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"WhatsApp Desktop (Unofficial)\" --electron-version=2.0.2",
    "package-linux": "electron-packager . unofficial-whatsapp-desktop --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/whatsapp.png --prune=true --out=dist --electron-version=2.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nikhil-prabhu/unofficial-whatsapp-desktop.git"
  },
  "keywords": [
    "WhatsApp"
  ],
  "author": "Nikhil Prabhu",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/nikhil-prabhu/unofficial-whatsapp-desktop/issues"
  },
  "homepage": "https://github.com/nikhil-prabhu/unofficial-whatsapp-desktop#readme"
}
